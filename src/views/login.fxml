<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <!-- Header -->
    <AnchorPane prefHeight="100.0" prefWidth="650.0" style="-fx-background-color: #3B82F6;">
        <children>
            <Label layoutX="278.0" layoutY="32.0" style="-fx-text-fill: white;" text="LOGIN">
                <font>
                    <Font name="Arial Bold" size="30.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>

    <!-- Login Form -->
    <VBox layoutX="200.0" layoutY="150.0" spacing="15.0">
        <children>
            <TextField fx:id="usernameField" prefHeight="40.0" prefWidth="250.0" promptText="Username" />
            <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="250.0" promptText="Password" />

            <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-font-size: 16px;" text="Login" />

            <Label style="-fx-text-fill: #3B82F6; -fx-underline: true;" text="Forgot Password?" />
        </children>
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
    </VBox>

</AnchorPane>
