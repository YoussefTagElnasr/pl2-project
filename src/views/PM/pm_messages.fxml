<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="582.0" prefWidth="848.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="views.PM.Pm_messages">
    <top>
        <BorderPane prefHeight="60.0" style="-fx-background-color:#3B82F6;">
            <left>
                <Label style="-fx-text-fill:white; -fx-font-size:20px; -fx-font-weight:bold;"
                       text="Messages" />
            </left>

            <right>
                <Button fx:id="backButton"
                        text="Home"
                        prefWidth="80" prefHeight="30"
                        style="-fx-background-color:white; -fx-text-fill:#3B82F6; -fx-font-weight:bold;"
                        BorderPane.alignment="CENTER_RIGHT"/>
            </right>
        </BorderPane>
    </top>
    <left>
        <VBox prefWidth="340.0" spacing="10" BorderPane.alignment="TOP_LEFT">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label style="-fx-font-size:16px; -fx-font-weight:bold;"
                   text="Incoming Messages" />

            <HBox spacing="10">
                <Button fx:id="needResponseButton"
                        prefWidth="150" text="Need Response (0)" />
                <Button fx:id="handledButton"
                        prefWidth="150" text="Handled (0)" />
            </HBox>

            <ScrollPane fitToWidth="true" fitToHeight="true">
                <content>
                    <ListView fx:id="messagesListView"
                              prefHeight="382.0"
                              prefWidth="327.0" />
                </content>
            </ScrollPane>
        </VBox>
    </left>
    <center>
        <VBox prefWidth="508.0" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label fx:id="customerNameLabel"
                   style="-fx-font-size:14px; -fx-font-weight:bold;"
                   text="Customer Name:" />

            <Label style="-fx-font-size:14px; -fx-font-weight:bold;"
                   text="Email:" />

            <Label fx:id="emailLabel"
                   style="-fx-font-size:11px; -fx-text-fill:gray;" />

            <Label style="-fx-font-size:14px; -fx-font-weight:bold;"
                   text="Message:" />
            <TextArea fx:id="messageLabel"
                      editable="false"
                      prefHeight="318.0"
                      prefWidth="484.0"
                      wrapText="true" />

            <Label style="-fx-font-size:14px; -fx-font-weight:bold;"
                   text="Response:" />
            <TextArea fx:id="responseLabel"
                      editable="false"
                      prefHeight="100.0"
                      prefWidth="484.0"
                      wrapText="true" />

            <HBox spacing="10">
                <Button fx:id="respondButton"
                        prefHeight="25.0" prefWidth="150.0"
                        text="Respond" />

                <Button fx:id="markUnhandledButton"
                        prefHeight="25.0" prefWidth="180.0"
                        text="Mark as Unhandled" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
