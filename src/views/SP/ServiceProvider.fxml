<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.SP.ServiceProvider">

    <VBox fillWidth="true" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <Label maxWidth="Infinity" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Service Provider Dashboard" />

        <TableView fx:id="tableRequests" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCustomer" prefWidth="150" text="Customer" />
                <TableColumn fx:id="colCustomerEmail" prefWidth="200" text="Customer Email" />
                <TableColumn fx:id="colDetails" prefWidth="250" text="Details" />
                <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
                <TableColumn fx:id="colReadyDate" prefWidth="150" text="Ready Date" />
            </columns>
        </TableView>

        <HBox spacing="10">

            <Label text="Price:" />
            <TextField fx:id="txtPrice" promptText="Enter price" />

            <Label text="Ready Date:" />
            <DatePicker fx:id="dateReady" />
        </HBox>

        <Button fx:id="btnSubmit" maxWidth="Infinity" prefWidth="250" text="Submit Price &amp; Ready Date" />
    </VBox>

</AnchorPane>
